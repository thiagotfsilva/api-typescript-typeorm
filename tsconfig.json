{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@useCases/*": [
        "src/useCases/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },

    "rootDir": "src",

  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
